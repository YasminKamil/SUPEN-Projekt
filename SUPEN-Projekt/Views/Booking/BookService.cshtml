
@model SUPEN_Projekt.Logic.ViewModels.BookingSystemServiceBookingViewModel
@{
	ViewBag.Title = "Update";
}
<div>
	<ol class="breadcrumb">
		<li>
			@Html.ActionLink("Välj företag", "Index", "BookingSystem")
		</li>
		<li><a href='@Url.Action("BookingSystem","BookingSystem",new { id = Model.bookingSystem.BookingSystemId})'>Boka en tjänst</a></li>
		<li>@Html.ActionLink("Boka en tid", "BookService", "Service", new { inServiceId = Model.service.ServiceId, inBookingSystemId = Model.bookingSystem.BookingSystemId }, new { })</li>
	</ol>
</div>

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.branchAId)
	@Html.HiddenFor(model => model.bookingSystem)
	@Html.HiddenFor(model => model.service)
	@Html.HiddenFor(model => Model.bookingSystem)
	@Html.HiddenFor(model => Model.bookingSystem.CompanyName)
	@Html.HiddenFor(model => Model.startTime)
	<h3>
		<b>
			@Model.bookingSystem.CompanyName
		</b>
	</h3>

	<div class="form-horizontal" style="border-top:outset; border-color:lightgray">
		<div style="width:50%; height:inherit; top:8px; right:8px; display:inline-block">

			<br /> <b style="font-size:medium">
				@Model.service.ServiceName
			</b>
			<br />

			<b style="font-size:medium">
				Starttid
			</b> @Model.startTime.ToString("HHmm")

			<b style="font-size:medium">
				Tid
			</b> @Model.service.Duration minuter

			<br />
			<b style="font-size:medium">
				Pris
			</b>@Model.service.Price SEK
		</div>

		<div class="panel panel-primary small-margin company-info-box-1 align-center" style=" height:inherit; top:8px; left:8px; display:inline-block">
			<div class="panel-body">
				@Model.bookingSystem.Address
				<br />
				@Model.bookingSystem.PostalCode @Model.bookingSystem.City
				<br />
				@Model.bookingSystem.ContactEmail
				<br />
				@Model.bookingSystem.ContactPhone
			</div>
		</div>

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Id)
		@Html.HiddenFor(model => Model.booking.BookingId)
		@Html.HiddenFor(model => Model.booking.Available)
		@Html.HiddenFor(model => Model.booking.StartTime)
		@Html.HiddenFor(model => Model.booking.EndTime)
		@Html.HiddenFor(model => Model.branchAId)
		@Html.HiddenFor(model => Model.booking.Date)
		@Html.HiddenFor(model => Model.bookingSystem)
		@Html.HiddenFor(model => Model.service)

		<div class="form-group">
			<div class="col-md-10">
				<b>Namn</b>
				<br />
				@Html.EditorFor(model => model.booking.UserName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => Model.booking.UserName, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-10">
				<b>E-post</b>
				<br />
				@Html.EditorFor(model => model.booking.UserMail, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => Model.booking.UserMail, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-10">
				<b>Mobilnummer</b>
				<br />
				@Html.EditorFor(model => model.booking.UserMobile, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => Model.booking.UserMobile, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Boka" class="btn btn-default" />
			</div>
		</div>
	</div>
}
<div>
</div>
