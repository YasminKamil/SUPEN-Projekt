@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div id="datePicker">

	<div class="demo-section k-content">
		<h4>Välj datum</h4>
		<input id="DatePicker" title="DatePicker" style="width: 20%;" />
	</div>

	<script>
		$(document).ready(function () {
			$("#DatePicker").kendoDatePicker({
				value: new Date(),
				dateInput: true
			});
		});
	</script>

</div>

<div id="timePicker">
	<div class="demo-section k-content">
		<h4>Välj tid</h4>
		<input id="TimePicker" value="10:00 AM" title="timepicker" style="width: 20%;" />
	</div>
	<script>
		$(document).ready(function () {
			$("#TimePicker").kendoTimePicker({
				dateInput: true
			});
		});
	</script>

</div>

