@model SUPEN_Projekt.Logic.ViewModels.ServiceViewModel

@{
    ViewBag.Title = "ServiceSuggestion";
}

<script type="text/javascript">
    $(window).on('load', function () {
        $('#myModal1').modal('show');
    });
</script>

