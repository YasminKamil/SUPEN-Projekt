@model SUPEN_Projekt.Logic.BookingSystemsViewModel
<table class="table">
	@foreach (var item in Model.bookingSystems) {
		<tr>
			<td class="no-Border">
				<a href='@Url.Action("BookingSystem","BookingSystem",new { id = item.BookingSystemId})' class='link-icon btn btn-default' style="width:100%; height:inherit; text-align:left">

					<div style="top:8px; left:8px;display:inline-block; margin:2% auto 0% 7%;   width:40%; text-align:left"><b style="font-size:large">@item.CompanyName</b> <br /><span class="glyphicon">&#xe062;</span> @item.Address <br />  @item.PostalCode @item.City</div>

				</a>
			</td>
		</tr>
		<tr></tr>
	}
</table>
